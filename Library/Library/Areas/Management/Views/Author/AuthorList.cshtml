@model List<Tbl_Author>
<h3 class="text-center">Yazar Listeleme Sayfası</h3>
<a class="btn btn-primary" style="float:right;" asp-controller="Author" asp-action="Create" asp-area="Management">Yeni Ekle</a>

<table class="table table-striped">

    <thead>
        <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Aksiyonlar</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i+1)</td>
                <td>@Model[i].FirstName</td>
                <td>@Model[i].LastName</td>
                <td>
                    <a asp-controller="Author" asp-action="Edit" asp-area="Management" asp-route-id="@Model[i].ID"><i class="bi bi-pencil-square"></i></a>
                    <a class="margin-icon" asp-controller="Author" asp-area="Management" asp-action="Delete" asp-route-id="@Model[i].ID"><i class="bi bi-x-circle"></i></a>
                </td>
            </tr> 
        }
    </tbody>
</table>