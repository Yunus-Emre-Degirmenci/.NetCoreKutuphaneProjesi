@model Tbl_Author

<h3 class="text-center">Yeni Yazar Ekleme Sayfası</h3>
<form method="post" asp-controller="Author" asp-action="Create" asp-area="Management">
    <div class="row">
        <div class="col-md-3 mb-3">
            <label class="form-label" asp-for="FirstName">İsim</label>
            <input type="text" class="form-control" asp-for="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
       
        <div class="col-md-3 mb-3">
            <label class="form-label" asp-for="LastName">Soyisim</label>
            <input type="text" class="form-control" asp-for="LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>    
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>