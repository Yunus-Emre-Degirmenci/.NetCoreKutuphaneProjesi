@model List<Tbl_Book>

<h3 class="text-center">Kitap Listeleme Sayfası</h3>
<a class="btn btn-primary" style="float:right;" asp-controller="Book" asp-action="Create" asp-area="Management">Yeni Ekle</a>
<table class="table table-striped">

    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Page Count</th>
            <th>Author</th>
            <th>BookType</th>
            <th>Aksiyonlar</th>
        </tr>
    </thead>
    <tbody>

        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th>@(i+1)</th>
                <td>@Model[i].Name</td>
                <td>@Model[i].PageCount</td>
                <td>@(Model[i].Tbl_Author.FirstName+ " "+ Model[i].Tbl_Author.LastName)</td>
                <td>@Model[i].Tbl_BookType.Name</td>
                <td>
                    <a asp-controller="Book" asp-action="Edit" asp-area="Management" asp-route-id="@Model[i].ID"><i class="bi bi-pencil-square"></i></a>
                    <a class="margin-icon" asp-controller="Book" asp-area="Management" asp-action="Delete" asp-route-id="@Model[i].ID"><i class="bi bi-x-circle"></i></a>
                </td>
            </tr>
        }
    </tbody>

</table>

