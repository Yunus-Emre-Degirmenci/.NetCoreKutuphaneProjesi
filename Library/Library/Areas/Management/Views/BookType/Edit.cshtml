@model Tbl_BookType

<h3 class="text-center">Kitap Tipi Güncelleme Sayfası</h3>
<form method="post" asp-controller="BookType" asp-action="Edit" asp-area="Management">
    <div class="row">
        <div class="col-md-3 mb-3">
            <label class="form-label" asp-for="Name">Tip</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>     
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>